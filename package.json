{
  "name": "protonmail-desktop",
  "productName": "Protonmail Desktop",
  "description": "Unofficial Electron wrapper for ProtonMail",
  "version": "0.5.5",
  "author": {
    "name": "Matthew Core <matcore@protonmail.com>",
    "email": "matcore@protonmail.com"
  },
  "copyright": "Â© 2017, M. Core <BeatPlus>.",
  "homepage": "https://github.com/protonmail-desktop/application",
  "repository": {
    "type": "git",
    "url": "https://github.com/protonmail-desktop/application"
  },
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "com.beatplus.pronmail-desktop",
    "publish": [
      "github"
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "freebsd",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        "AppImage",
        "snap",
        "pacman"
      ],
      "category": "Office"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "build/Icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "files": [
      "app/**/*",
      "app/static/*",
      "node_modules/**/*",
      "yarn.lock"
    ]
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "precommit": "eslint src --fix",
    "build": "gulp build",
    "eslint": "eslint src",
    "prerelease": "gulp build --env=production",
    "release": "electron-builder -p onTagOrDraft",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "start": "gulp start --env=development",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --require source-map-support/register",
    "coverage": "yarn test -- -R scripts/istanbul-reporter",
    "e2e": "gulp build-e2e --env=test && mocha app/e2e.js.autogenerated --trace-warnings --full-trace --require source-map-support/register"
  },
  "dependencies": {
    "dragula": "^3.7.2",
    "electron-context-menu": "^0.9.1",
    "electron-context-menu-handler": "^1.0.3",
    "electron-debug": "^1.1.0",
    "electron-dl": "^1.9.0",
    "electron-settings": "^3.1.1",
    "electron-tabs": "^0.7.0",
    "electron-updater": "2.19.1",
    "eslint": "^4.8.0",
    "fs-jetpack": "^1.2.0",
    "gulp-sass": "^3.1.0",
    "minimist": "^1.2.0",
    "sweetalert2": "^7.0.9"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "electron": "1.7.8",
    "electron-builder": "19.54.0",
    "electron-mocha": "^4.0.0",
    "electron-reload": "^1.1.0",
    "eslint-plugin-mocha": "^4.11.0",
    "fs": "0.0.1-security",
    "gulp": "^3.9.1",
    "gulp-batch": "^1.0.5",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "minimist": "^1.2.0",
    "mocha": "^3.5.0",
    "node-sass": "^4.7.2",
    "path": "^0.12.7",
    "rollup": "^0.45.2",
    "rollup-plugin-istanbul": "^1.1.0",
    "sinon": "^4.0.1",
    "sinon-chai": "^2.14.0",
    "source-map-support": "^0.4.15",
    "spectron": "^3.7.2"
  }
}
